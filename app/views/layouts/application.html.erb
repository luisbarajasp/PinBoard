<!DOCTYPE html>
<html>
<head>
  <title>PinBoard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Raleway:700,400,200' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Damion' rel='stylesheet' type='text/css'>
</head>
<body>

    <header id="main-navigation" class="clearfix">
        <% if user_signed_in? %>
            <%= link_to  '<i class="fa fa-pinterest"></i>'.html_safe, authenticated_root_path, class:"brand" %>
        <% else %>
            <%= link_to  '<i class="fa fa-pinterest"></i>'.html_safe, unauthenticated_root_path, class:"brand" %>
        <% end %>
        <% if user_signed_in? %>
        <nav>
            <%= link_to image_tag(current_user.avatar.url(:mini), :class => "img-circle") + " #{current_user.name.split[0]}", current_user %>
        </nav>
        <% else %>
        <nav>
            <%= link_to "Contact", pages_contact_path %>
        </nav>
        <nav>
            <%= link_to "About", pages_about_path %>
        </nav>
        <% end %>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <% if user_signed_in? %>
        <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_pin_path, :class => "pin" %>
        <%= link_to '<i class="fa fa-laptop"></i>'.html_safe, new_user_board_path(current_user), :class => "board" %>
    <% end %>

</body>
</html>
