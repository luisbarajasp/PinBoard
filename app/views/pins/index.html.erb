<div id="pins" class="transitions-enabled wrapper2 wrapper_padding index">
        <% @pins.each do |pin| %>
        <div class="box col3">
          <div class="thumbnail">
               <%= link_to image_tag(pin.image.url(:medium)), pin %>
               <div class="caption">
                    <div class="pin_title">
                        <h4><%= pin.title %></h4>
                        <% if current_user.likes %>
                            <%= link_to '
                                <span class="change-icon">
                                <i class="fa fa-heart"></i>
                                <i class="fa fa-heart-o"></i>
                                </span>
                            '.html_safe, pin_like_path(pin.id), :class => "like" %>
                        <% else %>
                            <%= link_to '
                                <span class="change-icon">
                                <i class="fa fa-heart"></i>
                                <i class="fa fa-heart-o"></i>
                                </span>
                            '.html_safe, pin_dislike_path(pin.id), :class => "like" %>
                        <% end %>
                    </div>
                    <% if pin.description? %>
                        <div class="pin_desc">
                            <p><%= pin.description %></p>
                        </div>
                    <% end %>
                    <div class="pin_user">
                        <%= link_to image_tag(pin.user.avatar.url(:mini), :class => "img-rounded") + " #{pin.user.name}", pin.user %>
                    </div>
               </div>
            </div>
        </div>
        <% end %>
</div>
